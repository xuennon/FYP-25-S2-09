rules_version = '2';

// Firebase Storage Security Rules for Business Documents
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow business registration document uploads (for signup process)
    match /business_documents/registration/{fileName} {
      allow read, write: if request.auth != null
                        && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // Allow users to manage their own documents after registration
    match /business_documents/{userId}/{fileName} {
      allow read, write: if request.auth != null 
                        && request.auth.uid == userId
                        && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
    
    // Admin access to all business documents (read-only for now)
    match /business_documents/{allPaths=**} {
      allow read: if request.auth != null; // Adjust this based on your admin system
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
